#!/bin/bash
echo 'Welcome to SecureCorp Legacy System'
echo 'Authentication required for access'
echo 'Enter credentials:'
read -p 'Username: ' username
read -s -p 'Password: ' password
echo
if [ "$username" = "legacy_admin" ] && [ "$password" = "unix1995" ]; then
    echo 'Access granted to maintenance shell'
    echo 'System Information:'
    echo 'Hostname: legacy-unix-system'
    echo 'OS: SunOS 5.8'
    echo 'Kernel: Generic_108528-29'
    echo 'Network Config: /etc/hosts contains sensitive entries'
    echo 'Flag location: /var/adm/messages contains audit trail'
    echo 'Use: grep -i "security_audit" /var/adm/messages'
else
    echo 'Access denied'
    sleep 2
fi